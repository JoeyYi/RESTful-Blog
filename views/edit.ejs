<% include partials/header %>
<div class="ui main text container segment">
    <h1 class="ui huge header">Edit Blog</h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">     
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" />
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[img]" value="<%= blog.img %>" />
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui grey basic button" type="submit" value="Submit" />
    </form>
</div>
    

<% include partials/footer %>
<% include partials/header %>
<div class="ui main text container segment">
    <div>
        <h1 class="ui huge header"><%= blog.title %></h1>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.img %>" />
                <div class="content">
                    <p><%= blog.created.toDateString() %></p>
                </div>
                <div id="blogBody" class="description">
                    <p><%- blog.body %></p>
                </div>             
            </div>

        </div>

        <a class="ui grey basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>

        <form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" >
            <button class="ui red basic button" type="submit">Delete</button>
        </form>

    </div>
</div>
    

<% include partials/footer %>